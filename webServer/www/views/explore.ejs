<body>
  <!-- write the header -->
  <% include partials/header %>
  <div class="container wrapper">
    <div class="row">
      <div class="col-md-10 col-md-offset-1"><h1 style="font-weight:bold; color: #FA7470; font-size: 75px">Explore</h1></div>
    </div>
    <div class="row">
      <div class="col-md-10 col-md-offset-1"><h1 style="margin-top: 10px">Search for Profiles</h1></div>
    </div>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
      <div id="custom-search-input">
          <div class="input-group">
              <input type="text" class="form-control input-lg" placeholder="Search by Username" />
              <span class="input-group-btn">
                  <button class="btn btn-info btn-lg" type="button">
                      <i class="glyphicon glyphicon-search"></i>
                  </button>
              </span>
          </div>
      </div>
      </div>
    </div>
  </div>   

    <% include partials/explore_grid %>

			<div class="modal fade content-modal" id="exploreModal" role="dialog">
    		<div class="modal-dialog">
      		<!-- Modal content-->
      		<div class="modal-content">
        		<div class="modal-header">
              <button type="button" class="btn btn-primary modal-button"><a href="/account" style="color:white;" id="profile-btn">Go to Profile</a></button>
          		<button type="button" class="close" data-dismiss="modal">&times;</button>
        		</div>
        		<div class="modal-body">
          		<img id="imagepreview" src="" style="width:100%;"/>
        		</div>
        		<div class="modal-footer">

							<button id="contact" class="btn btn-primary">Report Content</button>

              <div id="contactForm">

                <h1>Report Content</h1>
                <small></small>
                
                <form action="reportContent" method="post">
                  <textarea placeholder="Reason for Report"></textarea>
                  <input class="formBtn btn btn-primary" type="submit" />
                  <input class="formBtn btn btn-primary" type="reset" />
                </form>
              </div>

          		<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        		</div>
      		</div>
    		</div>
  		</div>
